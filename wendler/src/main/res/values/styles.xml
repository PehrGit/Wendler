<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/theme_color_dark</item>
    </style>

    <style name="ListHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/edit_text_text_size</item>
        <item name="android:minHeight">@dimen/content_minimum_click_area</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
    </style>

    <style name="CenterEditText" parent="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="EditIncrementEditText" parent="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/black_transparent</item>
        <item name="sv_showcaseColor">@color/black_transparent</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomTitleDetail</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CustomTitleDetail" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Wendlerized.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@drawable/float_label</item>
        <item name="android:textSize">12dp</item>
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="CircularProgressButton">
        <item name="android:layout_width">196dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cpb_cornerRadius">48dp</item>
        <item name="cpb_textComplete">@string/success</item>
        <item name="cpb_textError">@string/error</item>
        <item name="cpb_selectorIdle">@drawable/idle_state_selector</item>
        <item name="cpb_selectorComplete">@drawable/complete_state_selector</item>
        <item name="cpb_selectorError">@drawable/error_state_selector</item>
    </style>

    <style name="CircularProgressButtonBackup" parent="CircularProgressButton">
        <item name="cpb_textIdle">@string/btn_backup</item>
    </style>

    <style name="CircularProgressButtonRestore" parent="CircularProgressButton">
        <item name="cpb_textIdle">@string/btn_restore</item>
    </style>

    <style name="DialogButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonBar">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:gravity">center|end</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
    </style>

    <style name="TitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="SubtitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardView.TextBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardView.Title" parent="CardView.TextBase">
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="CardView.Subtitle" parent="CardView.TextBase">
        <item name="android:textSize">@dimen/card_subtitle_text_size</item>
        <item name="android:textColor">@color/text_subtitle_color</item>
    </style>

    <style name="CardView.Overflow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:minHeight">@dimen/content_minimum_click_area</item>
        <item name="android:minWidth">@dimen/content_minimum_click_area</item>
        <item name="android:src">@drawable/ic_more_vert_grey600_24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="List_SingleLine_TextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/list_single_line_text_size</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
    </style>

    <style name="List_DoubleLine_TextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
    </style>

    <style name="List_DoubleLine_TitleTextStyle" parent="List_DoubleLine_TextStyle">
        <item name="android:textSize">@dimen/list_double_line_text_size</item>
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="List_DoubleLine_SubtitleTextStyle" parent="List_DoubleLine_TextStyle">
        <item name="android:textSize">@dimen/list_double_line_secondary_text_size</item>
        <item name="android:textColor">@color/text_subtitle_color</item>
    </style>

    <dimen name="edit_text_text_size">16dp</dimen>
</resources>
