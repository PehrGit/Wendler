<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <se.johan.wendler.view.InitWeightView
            android:id="@+id/init_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/press"/>

        <se.johan.wendler.view.InitWeightView
            android:id="@+id/init_deadlift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/deadlift"/>

        <se.johan.wendler.view.InitWeightView
            android:id="@+id/init_bench"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/bench"/>

        <se.johan.wendler.view.InitWeightView
            android:id="@+id/init_squat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/squat"/>

        <Button
            android:id="@+id/btn_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_percentage"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/layout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/action_item_about"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/help_weight_dialog"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>