<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <se.johan.wendler.view.InitPercentView
            android:id="@+id/init_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/tv_week_one"/>

        <se.johan.wendler.view.InitPercentView
            android:id="@+id/init_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/tv_week_two"/>

        <se.johan.wendler.view.InitPercentView
            android:id="@+id/init_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/tv_week_three"/>

        <se.johan.wendler.view.InitPercentView
            android:id="@+id/init_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/tv_week_four"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_fresh"
                android:id="@+id/rbFresh"
                android:checked="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_heavy"
                android:id="@+id/rbHeavy"
                android:checked="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_custom"
                android:id="@+id/rbCustom"
                android:checked="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/action_item_about"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/help_percentage_dialog"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_margin="40dp"/>

    </LinearLayout>
</ScrollView>